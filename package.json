{
  "name": "jni-bun-template",
  "version": "0.1.0",
  "description": "Project template for Bun projects w/ linting, VSC integration, docker, tests and sample code.",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@types/bun": "latest",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "chai": "^6.2.1",
    "eslint": "^9.39.2",
    "mocha": "^11.7.5",
    "neo4j-driver": "^6.0.1",
    "testcontainers": "^11.9.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "lint": "bun eslint . --ext .js,.ts,.tsx",
    "test": "LOG_SETUP=prod TZ=UTC bun --bun mocha 'test-core/**/*.spec.ts' --exit",
    "test:integration": "LOG_SETUP=prod TZ=UTC bun --bun mocha 'test-integration/**/*.spec.ts' --timeout 20000 --exit"
  },
  "dependencies": {
    "winston": "^3.19.0"
  }
}
